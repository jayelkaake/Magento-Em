<form action="<?php echo $this->getPostUrl() ?>" method="post">

<script type="text/javascript">
//<![CDATA[
function changeSubmitStatus(obj) {
    $('submitButton').disabled = !obj.checked;
    if(obj.checked){
        $('submitButton').removeClassName("disabled");
    }
    else{
        $('submitButton').addClassName("disabled");
    }
}
//]]>
</script>
    <p>
        <input type="checkbox" name="agree" value="1" id="agree" onclick="changeSubmitStatus(this)" class="checkbox" />
        <label for="agree"><?php echo $this->__('I\'ve reviewed and executed the Magento Commercial License Agreement and agree to the terms in full.') ?></label>
    </p>
    <div class="button-set">
        <button class="form-button disabled" type="submit" id="submitButton" disabled="disabled"><span><?php echo $this->__('Continue') ?></span></button>
    </div>
</form>
<script type="text/javascript">
//<![CDATA[
document.observe("dom:loaded", function() {
  changeSubmitStatus($('agree'));
});
//]]>
</script>
