/** @var $this Enterprise_GiftWrapping_Block_Adminhtml_Order_View_Info */
?>
<?php if ($this->canDisplayGiftWrapping()): ?>
<div class="box-right" id="wrapping-order-container">
    <div class="entry-edit">
        <div><?php echo $this->__('Gift Wrapping for the Entire Order') ?></div>
        <br />
        <fieldset>
            <?php if ($this->getOrderInfo()->getDesign()): ?>
            <div class="gift-wrapping-form">
                <?php echo $this->__('Gift Wrapping Design') ?>: <span><?php echo $this->escapeHtml($this->getOrderInfo()->getDesign()); ?></span>
                <div class="gift-wrapping-design">
                    <?php if ($this->getOrderInfo()->getPath()): ?>
                        <img id="image-box" class="image-box" height="75" width="75" alt="" src="<?php echo $this->getOrderInfo()->getPath(); ?>"/>
                    <?php endif; ?>
                    <div id="price-box">
                        <?php if ($this->getDisplayWrappingBothPrices()): ?>
                        <div>
                            <span class="label"><?php echo $this->__('Price Excl. Tax') ?>:</span>
                            <span class="price"><?php echo $this->getOrderInfo()->getPriceExclTax(); ?></span>
                        </div>
                        <div>
                            <span class="label"><?php echo $this->__('Price Incl. Tax') ?>:</span>
                            <span class="price"><?php echo $this->getOrderInfo()->getPriceInclTax(); ?></span>
                        </div>
                        <?php else: ?>
                        <div>
                            <span class="label"><?php echo $this->__('Price') ?>:</span>
                            <span class="price"><?php echo $this->getOrderInfo()->getPrice(); ?></span>
                        </div>
                        <?php endif; ?>
                    </div>
                </div>
            </div>
            <?php endif; ?>

            <?php if ($this->getGiftReceipt()): ?>
            <p>
                <input type="checkbox" id="allow-gift-receipt" class="checkbox" disabled="disabled" <?php if ($this->getGiftReceipt()):?> checked="checked"<?php endif; ?> />
                <label for="allow-gift-receipt"><?php echo $this->__('Send Gift Receipt') ?></label>
            </p>
            <?php endif; ?>
            <?php if ($this->getPrintedCard()): ?>
            <p>
                <input type="checkbox" id="add-printed-card" class="checkbox" disabled="disabled" <?php if ($this->getPrintedCard()):?> checked="checked"<?php endif; ?> />
                <label for="add-printed-card"><?php echo $this->__('Add Printed Card') ?></label>
            </p>
            <div id="price-card-box">
            <?php if ($this->getDisplayCardBothPrices()): ?>
                <div>
                    <span class="label"><?php echo $this->__('Price Excl. Tax') ?>:</span>
                    <span class="price"><?php echo $this->getCardInfo()->getPriceExclTax(); ?></span>
                </div>
                <div>
                    <span class="label"><?php echo $this->__('Price Incl. Tax') ?>:</span>
                    <span class="price"><?php echo $this->getCardInfo()->getPriceInclTax(); ?></span>
                </div>
            <?php else: ?>
                <div>
                    <span class="label"><?php echo $this->__('Price') ?>:</span>
                    <span class="price"><?php echo $this->getCardInfo()->getPrice(); ?></span>
                </div>
            <?php endif; ?>
            </div>
            <?php endif; ?>
        </fieldset>
    </div>
</div>
<?php endif; ?>
