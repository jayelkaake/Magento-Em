<?php $_item = $this->getItem() ?>
<tr>
    <td><?php echo $this->__('Gift Wrapping'); ?> </td>
    <td></td>
    <td class="a-right">
        <?php echo $this->displayPrices($_item->getGwBaseOriginalPrice(),$_item->getGwOriginalPrice());?>
    </td>
    <td class="a-right">
        <?php if ($this->helper('enterprise_giftwrapping')->displaySalesWrappingBothPrices() || $this->helper('enterprise_giftwrapping')->displaySalesWrappingExcludeTaxPrice()): ?>
            <span class="price-excl-tax">
                <?php if ($this->helper('enterprise_giftwrapping')->displaySalesWrappingBothPrices()): ?>
                    <span class="label"><?php echo $this->__('Excl. Tax'); ?>:</span>
                <?php endif; ?>
                <?php echo $this->displayPrices($_item->getGwBasePrice(), $_item->getGwPrice()); ?>
            </span>
        <?php endif; ?>
        <?php if ($this->helper('enterprise_giftwrapping')->displaySalesWrappingBothPrices() || $this->helper('enterprise_giftwrapping')->displaySalesWrappingIncludeTaxPrice()): ?>
            <br />
            <span class="price-incl-tax">
                <?php if ($this->helper('enterprise_giftwrapping')->displaySalesWrappingBothPrices()): ?>
                    <span class="label"><?php echo $this->__('Incl. Tax'); ?>:</span>
                <?php endif; ?>
                <?php $_incl = $_item->getGwPrice() + $_item->getGwTaxAmount(); ?>
                <?php $_baseIncl = $_item->getGwBasePrice() + $_item->getGwBaseTaxAmount(); ?>
                <?php echo $this->displayPrices($_baseIncl, $_incl) ?>
            </span>
        <?php endif; ?>
    </td>
    <td></td>
    <td></td>
    <td class="a-right"><?php echo $this->displayPrices($_item->getGwBaseTaxAmount(), $_item->getGwTaxAmount());?></td>
    <td></td>
    <td></td>
    <td class="last"></td>
</tr>
